                    foreach ($log_lines as $prev_line) {
                        if (strpos($prev_line, $domain) !== false && preg_match('/Current IP:\s*([\d\.:a-fA-F]+)/', $prev_line, $ip_match2)) {
                            $data['ip'] = $ip_match2[1];
                            break;
                        }
                    }
                    break;
